# EditorConfig for OpenBSD KNF style
# https://man.openbsd.org/style

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# C and header files: KNF style
[*.{c,h}]
indent_style = tab
indent_size = 8
tab_width = 8
max_line_length = 80

# Makefiles require tabs
[Makefile]
indent_style = tab
indent_size = 8

# Linker scripts
[*.ld]
indent_style = tab
indent_size = 8

# Markdown
[*.md]
indent_style = space
indent_size = 2
trim_trailing_whitespace = false

# YAML
[*.{yml,yaml}]
indent_style = space
indent_size = 2

# JSON
[*.json]
indent_style = space
indent_size = 2
